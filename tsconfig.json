{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false

	},
  "buildOnSave": false,
  "compileOnSave":false,
	"include":[
	  "src/**/*.ts"
	],
	"exclude": [
	  "node_modules",
	  "dist"
  ],
  "filesGlob" : [
	  "src/**/*.ts",
	  "!node_modules/**",
	  "!dist/**"
  ]

}
